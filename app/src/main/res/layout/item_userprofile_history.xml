<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Global.Fragment.UserProfileHistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/imv_userprofile_his_image"
                android:scaleType="centerCrop"
                app:riv_corner_radius="5dp" />
            <ImageView
                android:id="@+id/imv_rent_bookmark"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_rent_bookmark"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"/>

        </FrameLayout>


        <FrameLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_2"
                android:text="Kumaravel"
                android:textColor="@android:color/white"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txv_history_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Omayli kumalar"
                android:textColor="@color/colorRed"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/txv_userprofile_his_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposit"
                android:textColor="@color/colorBlack"
                android:layout_gravity="right"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/txv_userprofile_his_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toyota Max 250 text"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txv_userprofile_his_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺100"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txv_userprofile_his_dateunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/week"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txv_userprofile_his_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8/28/2018"
                android:textColor="@color/colorBlue"
                android:textSize="14dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_arrow_blue"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/txv_userprofile_his_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorBlue"
                android:text="9/28/2018"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txv_history_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorBlue"
                android:text="₺100 = ₺90 + "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorBlue"
                android:text="₺10(fee)"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>