<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/profile_background"
    tools:context=".Business.Activity.UserProfileBusinessActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_back1"
                    android:layout_marginStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/btn_back"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/imv_setting_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_setting_new1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imv_profile_avatar"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/profile_icon"
                        android:padding="7dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        app:riv_corner_radius="30dp"
                        app:riv_oval="true"
                        app:riv_mutate_background="true"/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/icon_plus_blue"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="15dp"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name,Business Name.."
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_checkmark_new"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/business_mark"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/search_box">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/business_user"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_business_user"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>
                <Button
                    android:id="@+id/send_message_business"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/alread_rent"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/login_bg"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_verify_info"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_phone_new"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/txt_verified_phon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp"
                            android:text="@string/txt_unVerified"
                            android:layout_marginStart="15dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_email_new"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/txt_verified_email"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="@string/txt_unVerified"
                            android:textSize="18dp"
                            android:layout_marginStart="15dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_id_card_new"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/txt_verified_id"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp"
                            android:text="@string/txt_unVerified"
                            android:layout_marginStart="15dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_facebook_new"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/txt_verified_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp"
                            android:text="@string/txt_unVerified"
                            android:layout_marginStart="15dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_google_new"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/txt_verified_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp"
                            android:text="@string/txt_unVerified"
                            android:layout_marginStart="15dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="İlanlarım "
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>

            </LinearLayout>

            <GridView
                android:id="@+id/history_grid"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:horizontalSpacing="7dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="2"
                android:verticalSpacing="7dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click for more..."
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:visibility="visible"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:visibility="gone"
                android:layout_marginEnd="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>

            <ListView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:id="@+id/list_view_business"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:nestedScrollingEnabled="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Click for more..."
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginBottom="85dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </ScrollView>

