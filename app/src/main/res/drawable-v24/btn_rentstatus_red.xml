<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#0057b5" />
            <stroke
                android:width="1dp"
                android:color="#cccbcb" />
            <corners
                android:radius="10dp" />


        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F44336"
                android:endColor="#F44336"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#F44336" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>

</selector>