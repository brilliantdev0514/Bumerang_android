<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_star"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have a request"
            android:textColor="@color/colorRed"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGray"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_verify_info">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@mipmap/default_car_img"
            android:id="@+id/imv_req_product1"
            android:scaleType="centerCrop"
            app:riv_corner_radius="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <TextView
                android:id="@+id/txv_req_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:text="Toyota  260 G Four"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txv_req_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺100/"
                    android:textColor="@color/colorBlue"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/txv_req_dateunit1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/weekly"
                    android:textColor="@color/colorBlue"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyt_card"
        android:orientation="vertical"
        android:background="@drawable/lyt_forgot_dialog">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shadow"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/txv_req_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/business_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlue"
                    android:text="9 Reviews"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="50dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_location_red"/>

                <TextView
                    android:id="@+id/txv_req_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:text="@string/wait_location"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="50dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_mail_blue"/>

                <TextView
                    android:id="@+id/txv_req_email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bumerang@gmail.com"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="50dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_phone_grey"/>

                <TextView
                    android:id="@+id/txv_req_phonenum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86 123 456 789"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_req_google1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_google_verified"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imv_req_facebook1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_facebook_verified"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/simpleRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srb_clearRatingEnabled="true"
                    app:srb_clickable="true"
                    app:srb_drawableEmpty="@drawable/star_empty"
                    app:srb_drawableFilled="@drawable/star_filled"
                    app:srb_isIndicator="false"
                    app:srb_minimumStars="1"
                    app:srb_numStars="5"
                    app:srb_rating="2"
                    app:srb_scrollable="true"
                    app:srb_starHeight="22dp"
                    app:srb_starPadding="5dp"
                    app:srb_starWidth="22dp"
                    app:srb_stepSize="0.5">

                </com.willy.ratingbar.ScaleRatingBar>

                <TextView
                    android:id="@+id/txv_req_score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"
                    android:text="5.0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"/>

            </LinearLayout>

        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imv_req_avatar1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/bg_shadow_circle"
            android:src="@mipmap/ic_avatar"
            android:padding="7dp"
            android:scaleType="fitCenter"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="During"
            android:textColor="@color/colorBlue"
            android:textSize="14dp"
            android:layout_marginStart="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:text="Total:9days"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_req_fromdate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: 9/1/2019"
                    android:textColor="@color/colorBlue"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/txv_req_todate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:text="To: 9/10/2019"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textColor="@color/colorBlue"
            android:textSize="14dp"/>

       <TextView
           android:id="@+id/txv_req_totalprice1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14dp"
           android:textColor="@color/colorBlack"
           android:text="₺100"
           android:layout_marginStart="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request message"
            android:textColor="@color/colorBlue"
            android:textSize="16dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/txv_req_message1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/colorBlack"
            android:text="Hello, how are you, I am going to rent your house. The period is 3 years. please accept my request in 3 days.Reguard..."
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_description"
            android:padding="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="CANCEL"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textAlignment="center"
            android:background="@drawable/btn_rentstatus_black"
            android:layout_marginEnd="10dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:text="ACCEPT"
            android:background="@drawable/btn_rentstatus_red"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

</LinearLayout>