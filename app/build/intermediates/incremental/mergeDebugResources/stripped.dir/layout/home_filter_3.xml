<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/scrollView_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/bedcap"
                    android:textColor="@color/colorBlack"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_bedcapacity_caravan"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/search_box_filter"
                    android:entries="@array/spinner_bedcap"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/fuel"
                    android:textColor="@color/colorBlack"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_fueltype_caravan"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/search_box_filter"
                    android:entries="@array/spinner_fueltype"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/price"
                    android:textColor="@color/colorBlack"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_price_caravan"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/search_box_filter"
                    android:entries="@array/spinner_price"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/deposit"
                    android:textColor="@color/colorBlack"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_deposit_caravan"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/search_box_filter"
                    android:entries="@array/spinner_deposit"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>