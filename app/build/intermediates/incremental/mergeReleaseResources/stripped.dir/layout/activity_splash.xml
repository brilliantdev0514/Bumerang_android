<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    <FrameLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF5C5C" android:tag="layout/activity_splash_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="230dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo_icon"
                android:backgroundTint="@color/colorWhite" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_below="@+id/img_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-30dp"
                android:background="@drawable/logo_title"
                android:backgroundTint="@color/colorWhite" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            tools:context="com.evgenii.sixbouncingbuttons.SplashActivity">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/login_bg"
                android:backgroundTint="@color/colorWhite"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="#FF5C5C"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
         