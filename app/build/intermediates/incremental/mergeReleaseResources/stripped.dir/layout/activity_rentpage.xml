    <LinearLayout
        android:layout_above="@+id/RR_date"
        android:layout_margin="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:text="@string/start"
                android:layout_gravity="center_horizontal"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:text="@string/end"
                />

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/RR_date"
        android:layout_above="@+id/edt_rent_msg"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/total_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlue"
            android:textSize="14dp"/>

        <TextView
            android:layout_toLeftOf="@+id/img_slash"
            android:layout_centerVertical="true"
            android:id="@+id/from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_from_dt"
            android:textColor="@color/gray"
            android:textSize="16dp"/>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_slash"
            android:layout_centerHorizontal="true"
            android:src="@drawable/slace_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            ></ImageView>

        <TextView
            android:layout_toRightOf="@+id/img_slash"
            android:layout_centerVertical="true"
            android:id="@+id/to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_to_dt"
            android:textColor="@color/gray"
            android:textSize="14dp"/>

    </RelativeLayout>

    <EditText
        android:layout_above="@+id/LL_rent"
        android:id="@+id/edt_rent_msg"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/ripple_one"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:hint="Mesaj ekle"
        android:textColor="@color/gray"
        android:textSize="14dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/LL_rent"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="#D3D3D3"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="20dp"
                 android:textColor="@color/colorBlack"
                 android:text="Prices"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginBottom="10dp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="14dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rent_price"
                    android:visibility="gone"
                    android:textColor="@color/gray"
                    android:textSize="14dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/rental_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="5dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_rent"
            android:layout_marginEnd="10dp"
            style="@style/btnStyle2"
            android:text="@string/btn_send"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf = "parent"/>

    </LinearLayout>



</RelativeLayout>