<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lyt_forgot_dialog"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newpassword"
            android:textColor="@color/colorBlue"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/signup_input_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pwd"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"/>

            <EditText
                android:id="@+id/edit_alert_newpwd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/newpwd"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/signup_input_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pwd"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"/>

            <EditText
                android:id="@+id/edit_alert_confirmpwd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/confirmpwd"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:inputType="textPassword"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_change"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_login"
            android:text="@string/change"
            android:textColor="@color/colorBlue"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>



</LinearLayout>